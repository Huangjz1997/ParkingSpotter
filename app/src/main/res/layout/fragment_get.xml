<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_post"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <LinearLayout
        android:id="@+id/get_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="24sp"
            android:background="@color/colorRose"
            android:textColor="#ffffff"
            android:padding="10dp"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="left"
            android:padding="10dp"
            android:text="Select a parking lot and get a space number!"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Jizhou!"
            android:textSize="20sp"
            android:background="#C4C4C4"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="10dp"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/get_button_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/get_top"
        android:layout_above="@+id/get_token"

        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/selectGetButton"
            android:text="Select Parking Lot"
            android:background="@color/colorRose"
            android:textColor="#ffffff"
            android:textSize="20dp"
            />

            <Button
                android:layout_width="match_parent"
                android:layout_margin="50dp"
                android:layout_height= "100dp"
                android:background="@color/colorRose"
                android:orientation="vertical"
                android:text="GET"
                android:textSize="50dp"
                android:textColor="#ffffff"
                android:id="@+id/getbut"
                android:padding="3dp">

            </Button>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

            >

            <TextView
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C4C4C4"
                android:gravity="center"
                android:text="Row: "
                android:textColor="#000000"
                android:textSize="20sp"
                android:id="@+id/get_row"
                ></TextView>
            <TextView
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C4C4C4"
                android:gravity="center"
                android:text="Column: "
                android:textColor="#000000"
                android:textSize="20sp"
                android:id="@+id/get_column"
                ></TextView>
        </LinearLayout>



    </LinearLayout>






    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/get_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C4C4C4"
        android:gravity="center"
        android:padding="10dp"
        android:text="My current tokens:"
        android:textColor="#000000"
        android:textSize="20sp"
        ></TextView>


</RelativeLayout>